<project name="vmc-properties" default="" basedir="..">

  <!-- ===================================================================   -->
  <!-- Constant values                                                       -->
  <!-- ===================================================================   -->

  <!-- general -->
  <property name="Name" value="iml"/>
  <property name="name" value="iml"/>

    <!--Set deployment paths-->
  <property name="iml.suite.root"     value="/tmp/simdat"/>

  
  <!-- compiler -->
  <property name="javac.target" value="1.5"/>
  <property name="javac.debug" value="on"/>
  <property name="javac.optimize" value="on"/>
  <property name="javac.deprecation" value="off"/>
  <property name="javac.verbose" value="off"/>
  <property name="javac.fail.onerror" value="on"/>
  
  <!-- global file system -->
  <property name="iml.bin"   value="bin"/>
  <property name="iml.doc"   value="doc"/>
  <property name="iml.build" value="build"/>
  <property name="iml.etc"   value="etc"/>
  <property name="iml.libs"   value="libs"/>
  <property name="iml.test"   value="test"/>
  <property name="iml.src"   value="src"/>
  <property name="iml.conf"  value="conf"/>
  <property name="iml.sql"   value="sql"/>
  <property name="iml.suite" value="iml-suite"/>
	
	
  <!-- build file system -->
  <property name="iml.classes"      value="${iml.build}/classes"/>
  <property name="iml.api"          value="${iml.build}/api"/>
  <property name="iml.dist"         value="${iml.build}/dist"/>
  <property name="iml.run"          value="${iml.build}/run"/>
  <property name="iml.log"          value="${iml.build}/log"/>
  <property name="iml.lib"          value="${iml.build}/lib"/>
  <property name="iml.war"          value="${iml.build}/war"/>
  <property name="iml.tar"          value="${iml.build}/tar"/>
  <property name="iml.sar"          value="${iml.build}/sar"/>
  <property name="iml.ear"          value="${iml.build}/ear"/>
  <property name="iml.audit"        value="${iml.build}/audit"/>
  <property name="iml.data"         value="${iml.build}/data"/>
  <property name="iml.resources"    value="${iml.etc}/resources"/>
  <property name="iml.jsp"    	    value="${iml.build}/jsp"/>	
  <property name="iml.javadocs"    value="${iml.build}/docs/api"/>
	
  <!-- set external classpath -->
  <path id="iml.classpath">
    <fileset dir="${iml.libs}">
      <include name="*.jar"/>
    </fileset>
  </path>
  <!-- class use to execute test.env -->
  <path id="iml.test.env">
  	<fileset dir="${iml.libs}">
  	      <include name="*.jar"/>
  	</fileset>
  	<pathelement path="${iml.classes}"/>
  </path>

	
  <!-- task definitions -->
<taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc">
	<classpath location="tools/lib/groovy-all-1.5.4.jar"/>
</taskdef>
  
</project>
